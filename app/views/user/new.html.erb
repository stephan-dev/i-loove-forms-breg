
<div class="container-fluid">

	<h1>Nouvel utilisateur</h1>
	<p>Bienvenue,</p>


	<div>
		<%= form_for @user, url: {action: "create"}, html: {:class => 'form-group'} do |f| %> 
		  <%= f.text_field :username, class: 'form-control', placeholder: 'ton nom' %> <br><br>
		  <%= f.text_field :email, class: 'form-control', placeholder: 'ton mail' %> <br><br>
		  <%= f.text_area :bio, size: "20x12", class: 'form-control', placeholder: 'ta bio' %> <br>
		  <%= f.submit "Create" %>
		<% end %>

	</div>

	<div class="button">
		<a href="#">bouton</a>
	</div>

</div>